{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2015"
  },
  "exclude": [
    "jest.config.ts",
    "jest.e2e-config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/test/**/*.e2e-test.ts",
    "src/test/**/*.e2e-spec.ts"
  ],
  "include": ["src/**/*.ts"]
}
